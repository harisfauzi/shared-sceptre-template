Description: CodeCommit Repository for {{ sceptre_user_data.project_code }}
AWSTemplateFormatVersion: "2010-09-09"

Resources:

{%- for repository in sceptre_user_data.repositories %}
{%- set repository_name = repository.name %}
  {{ repository_name }}:
    Type: AWS::EC2::Repository
    DeletionPolicy: {{ repository.deletion_policy | default('Delete') }}
    UpdateReplacePolicy: {{ repository.update_replace_policy | default('Delete') }}
    Properties:
      RepositoryName: {{ repository.repository_name }}
{%- if repository.code is defined %}
      Code:
{%- if repository.code.branch_name is defined %}
        BranchName: {{ repository.code.branch_name }}
{%- endif %}
        S3:
          Bucket: {{ repository.code.s3.bucket }}
          Key: {{ repository.code.s3.key }}
{%- if repository.code.s3.object_version is defined %}
          ObjectVersion: {{ repository.code.s3.object_version }}
{%- endif %}
{%- endif %}
{%- if repository.repository_description is defined %}
      RepositoryDescription: {{ repository.repository_description }}
{%- endif %}
      Tags:
        - Key: SourceRepoURL
          Value: {{ sceptre_user_data.source_repo_url | default('unknown') }}
{%- if repository.tags is defined %}
{%- for key,value in repository.tags.items() %}
        - Key: {{ key }}
          Value: {{ value }}
{%- endfor %}
{%- endif %}
{%- if repository.triggers is defined %}
      Triggers:
{%- for repository_trigger in repository.triggers %}
        - Name: {{ repository_trigger.name }}
          DestinationArn: {{ repository_trigger.destination_arn }}
          Events:
{%- for event in repository_trigger.events %}
            - {{ event }}
{%- endfor %}
{%- if repository_trigger.branches is defined %}%}
          Branches:
{%- for branch in repository_trigger.branches %}
            - {{ branch }}
{%- endfor %}
{%- endif %}
{%- if repository_trigger.custom_data is defined %}%}
          CustomData: {{ repository_trigger.custom_data }}
{%- endif %}
{%- endif %}
{%- endfor %}

Outputs:

{%- for repository in sceptre_user_data.repositories %}
{% set repository_name = repository.name %}
  {{ repository_name }}:
    Description: Repository ID for {{ repository_name }}
    Value:
      Ref: {{ repository_name }}
    Export:
      Name:
        Fn::Sub: "${AWS::StackName}-{{ repository_name }}"

  {{ repository_name }}CidrBlock:
    Description: The IPv4 CIDR block for {{ repository_name }}
    Value:
      Fn::GetAtt:
        - {{ repository_name }}
        - CidrBlock
    Export:
      Name:
        Fn::Sub: "${AWS::StackName}-{{ repository_name }}-CidrBlock"

{%- if repository.use_ipv6 %}
  {{ repository_name }}Block:
    Description: Association ID of repositoryCidrBlock for {{ repository_name }}
    Value:
      Ref: {{ repository_name }}CidrBlock
    Export:
      Name:
        Fn::Sub: "${AWS::StackName}-{{ repository_name }}-Block"
{%- endif %}
{%- endfor %}
