# Supported structure as of 20241230:
Type: AWS::EC2::EIP
Properties:
  Address: String
  Domain: String
  InstanceId: String
  IpamPoolId: String
  NetworkBorderGroup: String
  PublicIpv4Pool: String
  Tags:
    - Key: String
      Value: String
  TransferAddress: String
#}